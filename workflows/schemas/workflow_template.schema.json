{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://creatory.dev/schemas/workflow_template.schema.json",
  "title": "Creatory Workflow Template",
  "type": "object",
  "required": ["name", "version", "nodes", "edges"],
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "version": { "type": "integer", "minimum": 1 },
    "definition_json": { "type": "object" },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["node_key", "type"],
        "properties": {
          "node_key": { "type": "string", "minLength": 1 },
          "type": {
            "type": "string",
            "enum": ["agent", "tool", "human_gate", "router", "memory"]
          },
          "config_json": { "type": "object" },
          "position_x": { "type": "number" },
          "position_y": { "type": "number" }
        },
        "additionalProperties": false
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["source_node_key", "target_node_key"],
        "properties": {
          "source_node_key": { "type": "string", "minLength": 1 },
          "target_node_key": { "type": "string", "minLength": 1 },
          "condition_expr": { "type": "string" },
          "metadata_json": { "type": "object" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
